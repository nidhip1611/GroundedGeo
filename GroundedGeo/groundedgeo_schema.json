{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GroundedGeoQuery",
  "type": "object",
  "required": [
    "query_id",
    "query_text",
    "query_type",
    "gold_answer",
    "hard_case_bucket",
    "split"
  ],
  "properties": {
    "query_id": {
      "type": "string",
      "pattern": "^gg_[a-z]+_\\d{4}$"
    },
    "query_text": {
      "type": "string",
      "minLength": 10
    },
    "query_type": {
      "type": "string",
      "enum": [
        "boundary",
        "place_disambiguation",
        "poi",
        "temporal",
        "jurisdiction"
      ]
    },
    "gold_answer": {
      "type": "string",
      "minLength": 1
    },
    "hard_case_bucket": {
      "type": "string",
      "enum": [
        "boundary_adjacent",
        "ambiguous_name",
        "overlapping_jurisdiction",
        "stale_fact",
        "conflicting_sources"
      ]
    },
    "split": {
      "type": "string",
      "enum": [
        "dev",
        "test"
      ]
    },
    "refusal_expected": {
      "type": "boolean"
    }
  }
}